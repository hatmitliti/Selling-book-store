<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="8">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:gravity="center"                android:paddingStart="10dp"                android:orientation="vertical">                <TextView                    android:textColor="@color/black"                    android:id="@+id/txtEmployee"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:paddingLeft="10dp"                    android:text="Peter Parker"                    android:textStyle="bold"                    android:textSize="@dimen/user_textsize" />                <TextView                    android:id="@+id/txtPermissionItem"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:paddingLeft="10dp"                    android:text="Thá»§ kho"                    android:textColor="@color/black"                     />            </LinearLayout>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginEnd="20dp"            android:layout_weight="1">            <ImageView                android:id="@+id/btnEditEmployee"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:clickable="true"                android:src="@drawable/pencil" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginEnd="20dp"            android:layout_weight="1">            <ImageView                android:id="@+id/btndeleteEmployee"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:clickable="true"                android:src="@drawable/trash" />        </LinearLayout>    </LinearLayout></androidx.cardview.widget.CardView>