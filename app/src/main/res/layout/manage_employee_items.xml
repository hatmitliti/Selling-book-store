<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="8">            <TextView                android:id="@+id/txtEmployee"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="Peter Parker"                android:layout_gravity="center"                android:textSize="@dimen/user_textsize"                android:paddingLeft="20sp"></TextView>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:src="@drawable/pencil"                android:clickable="true"></ImageView>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:src="@drawable/trash"                android:clickable="true"></ImageView>        </LinearLayout>    </LinearLayout></androidx.cardview.widget.CardView>