<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btntongHop"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:drawableTop="@drawable/ic_baseline_format_list_bulleted_24"
                android:padding="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng hợp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnhangTon"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:drawableTop="@drawable/ic_baseline_horizontal_split_24"
                android:padding="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hàng tồn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnloaiSach"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:drawableTop="@drawable/ic_baseline_menu_book_24"
                android:padding="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại sách " />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnxuatHang"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:drawableTop="@drawable/ic_baseline_north_24"
                android:padding="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất hàng " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnnhapHang"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:drawableTop="@drawable/ic_baseline_addchart_24"
                android:backgroundTint="@color/teal_200"
                android:padding="16dp"
                android:text="1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập hàng" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>