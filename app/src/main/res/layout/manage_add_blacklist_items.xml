<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="9">            <TextView                android:id="@+id/txtAddBlacklist"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="Peter Parker"                android:textSize="@dimen/user_textsize"                android:paddingLeft="10sp"                android:layout_gravity="center"></TextView>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:clickable="true"                android:src="@drawable/check"></ImageView>        </LinearLayout>    </LinearLayout></LinearLayout>