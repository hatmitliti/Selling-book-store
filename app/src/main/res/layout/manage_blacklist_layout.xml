<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <SearchView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginRight="10sp"            android:layout_marginLeft="10sp"></SearchView>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="8">        <ListView            android:id="@+id/listBlacklist"            android:layout_width="match_parent"            android:layout_height="match_parent"></ListView>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:gravity="center">        <Button            android:layout_width="match_parent"            android:layout_height="match_parent"            android:text="@string/btnAdd"></Button>    </LinearLayout></LinearLayout>