<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="8">            <TextView                android:id="@+id/txtBlacklist"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:paddingLeft="20sp"                android:text="Peter Parker"                android:textSize="20sp"></TextView>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:clickable="true"                android:src="@drawable/block"></ImageView>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:clickable="true"                android:src="@drawable/trash"></ImageView>        </LinearLayout>    </LinearLayout></LinearLayout>