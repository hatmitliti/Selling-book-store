<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="9" >        <ListView            android:divider="@null"            android:id="@+id/lvTinNhan"            android:layout_width="match_parent"            android:layout_height="match_parent"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal"        android:paddingLeft="10sp">        <EditText            android:id="@+id/txtNoiDungTinNhan"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="8"            android:hint="Soạn tin nhắn ...." />        <ImageView            android:id="@+id/btnGuiTinNhan"            android:layout_width="0dp"            android:layout_height="30sp"            android:layout_gravity="center"            android:layout_weight="2"            android:clickable="true"            android:src="@drawable/send" />    </LinearLayout></LinearLayout>