<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="8">            <TextView                android:id="@+id/txtUserNameItemLayout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:paddingLeft="20sp"                android:text="Peter Parker"                android:textColor="@color/black"                android:textSize="20sp"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginEnd="20dp"            android:layout_weight="1"            android:gravity="center">            <ImageView                android:id="@+id/btnUpdateUserItemLayout"                android:layout_width="32dp"                android:layout_height="32dp"                android:src="@drawable/pencil"></ImageView>        </LinearLayout>    </LinearLayout></LinearLayout>