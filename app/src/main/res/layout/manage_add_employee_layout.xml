<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2"        android:gravity="center">        <ImageView            android:layout_width="100sp"            android:layout_height="100sp"            android:clickable="true"            android:src="@drawable/user" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="11"        android:orientation="vertical">        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="203dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Email:" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:gravity="right" />            </LinearLayout>        </LinearLayout>        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="203dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="@string/password" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:gravity="right"                    android:inputType="textPassword" />            </LinearLayout>        </LinearLayout>        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="203dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Họ và Tên:" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:gravity="right" />            </LinearLayout>        </LinearLayout>        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="203dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Năm sinh:" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:gravity="right"                    android:inputType="date" />            </LinearLayout>        </LinearLayout>        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="203dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Điện thoại:" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:gravity="right" />            </LinearLayout>        </LinearLayout>        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="225dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Lương cơ bản:" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:gravity="right"                    android:inputType="number" />            </LinearLayout>        </LinearLayout>        <LinearLayout style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle"                android:layout_width="203dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="Chức vụ:" />            </LinearLayout>            <LinearLayout style="@style/employeeItemStyle">                <Spinner                    android:id="@+id/spinnerAddEmployee"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center" />            </LinearLayout>        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <Button            android:layout_width="match_parent"            android:layout_height="match_parent"            android:text="@string/btnAdd" />    </LinearLayout></LinearLayout>