<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="SOẠN ĐƠN HÀNG"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/vien1"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnChuaDongGoi"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/unpacked" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CHƯA ĐÓNG GÓI"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/vien1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnDaDongGoi"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/packaged" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ĐÃ ĐÓNG GÓI"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/vien1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnDangVanChuyen"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/intransit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ĐANG VẬN CHUYỂN"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/vien1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnDaGiao"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/delivered" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ĐÃ GIAO"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/vien1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnDonBiHuy"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bill_cancel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ĐƠN BỊ HỦY"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/vien1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnNhapHangSoanDon"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_nhan_hang_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NHẬN HÀNG"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnHangThanhVien"
                android:layout_width="@dimen/_70"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/rank_user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HẠNG THÀNH VIÊN"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnChangepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chang_password" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/logout" />
    </LinearLayout>

</LinearLayout>

