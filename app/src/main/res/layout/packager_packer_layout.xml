<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnChuaDongGoi"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/unpacked" />

    <ImageView
        android:id="@+id/btnDaDongGoi"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/packaged" />

    <ImageView
        android:id="@+id/btnDangVanChuyen"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/intransit" />

    <ImageView
        android:id="@+id/btnDaGiao"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/delivered" />


    <ImageView
        android:id="@+id/btnDonBiHuy"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_bill_cancel" />


    <ImageView
        android:id="@+id/btnNhapHangSoanDon"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_nhan_hang_" />


</LinearLayout>

