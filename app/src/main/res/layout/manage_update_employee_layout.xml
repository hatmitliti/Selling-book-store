<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2"        android:gravity="center">        <ImageView            android:layout_width="100sp"            android:layout_height="100sp"            android:src="@drawable/user"            android:clickable="true"></ImageView>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="11"        android:orientation="vertical">        <LinearLayout            style="@style/employeeStyle">            <LinearLayout               style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="@string/username"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="@string/hint_user"                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="@string/password"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="@string/hint_pass"                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Họ và Tên:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="Nhập tên ..."                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Năm sinh:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:text="2001"                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Giới tính:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <LinearLayout                    style="@style/employeeItemStyle">                    <RadioButton                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:text="Nam"></RadioButton>                </LinearLayout>                <LinearLayout                    style="@style/employeeItemStyle">                    <RadioButton                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:text="Nữ"></RadioButton>                </LinearLayout>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Điện thoại:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="Nhập số điện thoại.."                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Địa chỉ:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="Nhập địa chỉ"                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Email:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="Nhập email ..."                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Lương cơ bản:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="Nhập lương cơ bản..."                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Hệ số lương:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <EditText                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:hint="Nhập hệ số lương..."                    android:gravity="right"></EditText>            </LinearLayout>        </LinearLayout>        <LinearLayout            style="@style/employeeStyle">            <LinearLayout                style="@style/employeeItemStyle">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="Chức vụ:"                    android:layout_gravity="center"></TextView>            </LinearLayout>            <LinearLayout                style="@style/employeeItemStyle">                <Spinner                    android:id="@+id/spinnerUpdateEmployee"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"></Spinner>            </LinearLayout>        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:gravity="center"        android:layout_weight="1">        <Button            android:layout_width="150dp"            android:layout_height="wrap_content"            android:backgroundTint="@color/teal_200"            android:text="Cập nhật"></Button>    </LinearLayout></LinearLayout>