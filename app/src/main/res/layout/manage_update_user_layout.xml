<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <androidx.appcompat.widget.Toolbar        android:id="@+id/toobar"        android:layout_width="match_parent"        android:layout_height="?attr/actionBarSize"        android:background="#FF9800"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:title="Cập nhật thông tin khách hàng" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginLeft="10dp"        android:layout_marginRight="10dp"        android:layout_marginBottom="10dp"        android:layout_weight="4"        android:gravity="center"        android:orientation="vertical">        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"            android:id="@+id/profile_image_NguoiXuLyHoaDon"            android:layout_width="90dp"            android:layout_height="90dp"            android:layout_weight="1"            android:src="@drawable/squid_game_006"            app:civ_border_color="#FF000000"            app:civ_border_width="2dp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0dp"        android:layout_weight="6"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="4"                android:paddingStart="10dp"                android:text="@string/name_customer"                android:textColor="@color/black"                android:textSize="18sp"                android:textStyle="bold" />            <EditText                android:id="@+id/edtTenNguoiDungUpdateUser"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="6"                android:imeOptions="actionNext"                android:inputType="text"                android:minHeight="48dp"                android:paddingEnd="10dp"                tools:ignore="SpeakableTextPresentCheck" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="4"                android:paddingStart="10dp"                android:text="@string/date_"                android:textColor="@color/black"                android:textSize="18sp"                android:textStyle="bold" />            <EditText                android:id="@+id/edtNgaySinhUpdateUser"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="6"                android:imeOptions="actionNext"                android:inputType="date"                android:minHeight="48dp"                android:paddingEnd="10dp"                tools:ignore="SpeakableTextPresentCheck" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="4"                android:paddingStart="10dp"                android:text="@string/sdt"                android:textColor="@color/black"                android:textSize="18sp"                android:textStyle="bold" />            <EditText                android:id="@+id/edtSoDienThoaiUpdateUser"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="6"                android:imeOptions="actionNext"                android:inputType="phone"                android:minHeight="48dp"                tools:ignore="SpeakableTextPresentCheck" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="4"                android:paddingStart="10dp"                android:text="@string/rank"                android:textColor="@color/black"                android:textSize="18sp"                android:textStyle="bold" />            <EditText                android:id="@+id/edtXepHangUpdateUser"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="6"                android:enabled="false"                android:imeOptions="actionNext"                android:inputType="text"                android:minHeight="48dp"                android:paddingEnd="10dp"                tools:ignore="SpeakableTextPresentCheck" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="4"                android:paddingStart="10dp"                android:text="@string/address"                android:textColor="@color/black"                android:textSize="18sp"                android:textStyle="bold" />            <EditText                android:id="@+id/edtDiaChiUpdateUser"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="6"                android:imeOptions="actionDone"                android:inputType="text"                android:lines="3"                android:minHeight="48dp"                android:paddingEnd="10dp"                tools:ignore="SpeakableTextPresentCheck" />        </LinearLayout>        <Button            android:id="@+id/btnCapNhatUpdateUser"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="100dp"            android:layout_marginTop="100dp"            android:layout_marginEnd="100dp"            android:text="Cập Nhật" />    </LinearLayout></LinearLayout>