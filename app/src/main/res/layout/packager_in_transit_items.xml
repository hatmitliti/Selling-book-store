<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="9">            <TextView                android:textColor="@color/black"                android:id="@+id/txIntransit"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="Đơn hàng 1"                android:textSize="20sp"                android:paddingLeft="10dp"                android:layout_gravity="center"/>        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginEnd="20dp"            android:layout_weight="1">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:clickable="true"                android:src="@drawable/check"                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />        </LinearLayout>    </LinearLayout></LinearLayout>